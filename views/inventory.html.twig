<html>
<head>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/styles.css" charset="utf-8">
    <title>Inventory</title>
</head>
<body>
    <div class='container'>
        <div class='well'>
            <h1>Word Counter</h1>
        </div>
        <div class='row'>
            <div class='col-md-5'>
                {% block inputform %}
                <h2>Add an item to your collection</h2>
                <form action='/display' method='post'>
                    <div class='form-group'>
                        <label for='item'>Enter the item you would like to add</label>
                        <input required type='text' name='item' class='form-control'>
                    </div>
                    <div class='form-group'>
                        <label for='category'>Enter the category of the item</label>
                        <input required type='text' name='category' class='form-control'>
                    </div>
                    <button type='submit' class='btn btn-info'>Add item</button>
                </form>
                {% endblock %}
            </div>
            <div class='col-md-7'>
                {% block display %}
                    <h2>Your inventory will display here:</h2>
                {% endblock %}
            </div>
        </div>
    </div>
</body>
</html>
